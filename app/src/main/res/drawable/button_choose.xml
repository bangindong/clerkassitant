<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#0aff1a"/>
            <corners android:radius="10dip"/>
            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff0601"/>
            <corners android:radius="10dip"/>
            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>
</selector>