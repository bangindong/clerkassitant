<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radius_child_conversation"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:layout_marginBottom="@dimen/padding_large"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_child_conversation">
        <ImageView
            android:id="@+id/imgChild"
            android:background="@drawable/frame_img_child"
            android:src="@drawable/img_test"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/height_child_conversation"
            android:layout_height="@dimen/height_child_conversation"
            android:contentDescription="@string/img_employee" />
        <LinearLayout
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:paddingTop="@dimen/padding_normal"
            android:paddingBottom="@dimen/padding_normal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/imgChild"
            android:layout_toEndOf="@+id/imgChild">
            <TextView
                android:id="@+id/tvNameMeeting"
                android:text="Tên cuộc họp"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_big"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/tvContentMeeting"
                android:paddingTop="@dimen/padding_tiny"
                android:maxLines="3"
                android:ellipsize="end"
                android:gravity="start"
                android:text="dsfsdfsdfsfdfdfdfdf"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="0dp" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tvRoomNameMeeting"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="dfdfdfd"/>
                <TextView
                    android:id="@+id/tvTimeMeeting"
                    android:layout_width="match_parent"
                    android:gravity="end|center"
                    android:text="dfdfdfdff"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>