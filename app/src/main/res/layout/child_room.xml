<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_giant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="@dimen/margin_view_room_to_top"
        android:orientation="vertical"
        android:background="@drawable/background_item_room">

        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:text="Phòng 102-A1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRoomAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="địa chỉ" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="@dimen/padding_giant"
        android:layout_marginRight="@dimen/padding_giant"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/imgRoom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/img_room"
            android:scaleType="centerCrop"
            android:src="@drawable/img_test" />
    </android.support.v7.widget.CardView>

</RelativeLayout>